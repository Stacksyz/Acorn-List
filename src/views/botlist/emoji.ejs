<%- include('../parts/head', {bot, user, path}) %>
<style>
.form-control {
  background-color: var(--form-input);
  color: var(--input-color);
  border: none;
}
.form-control:focus {
  background-color: var(--form-input);
  color: var(--input-color);
  border: 3px solid var(--button-green);
}
  label {
    color: var(--label-color)!important;
  }
input[type="text"]:disabled {
  background-color: var(--input-disabled);
  color: gray;
  border: none;
  cursor: not-allowed;
}
</style>
  <br><br>
<div style="background-color: var(--form-background);" class="container p-4">
  <script>
        $(function() {
        var txt = $("input#botID");
        var func = function() {
            txt.val(txt.val().replace(/\s/g, ''));
        }
        txt.keyup(func).blur(func);
    });
  </script>
<div id="content" class="main-content">
    <br><br><br><br><br><br>
    <div class="container">
      <form method="POST">
        <div class="form-row mb-4">
            <div class="form-group col-md-4">
                <label for="inputEmail4">Emoji Icon URL<span style="color:red">*</span></label>
                <input type="text" class="form-control" id="icon" name="icon" placeholder="https://emoji.gg/emoji/3044-pepe-clap" required>
            </div>
            <div class="form-group col-md-4">
                <label for="inputEmail4">Emoji Name<span style="color:red">*</span></label>
                <input type="text" class="form-control" id="serverName" name="serverName" placeholder="Pepe_Clap" required>
            </div>
            <div class="form-group col-md-4">
                <label for="inputEmail4">Emoji Description<span style="color:red">*</span></label>
              <textarea style="width: 100%;" type="text" class="form-control" id="partnerDesc" name="partnerDesc" placeholder="Pepe Is calpping 4 U" required></textarea>
            </div>
         </div>
        <div class="form-group mb-4">
          <label for="inputEmail4">Owner ID<span style="color:red">*</span></label>
          <input type="text" class="form-control" id="ownerID" name="ownerID" maxlength="100" placeholder="693553429380857978" required>
        </div>
        <div class="form-group mb-4">
          <label for="inputEmail4">Emoji Preview URL<span style="color:red">*</span></label>
          <input type="text" class="form-control" id="background" name="background" maxlength="100" placeholder="https://emoji.gg/emoji/3044-pepe-clap" required>
        </div>
        <div class="form-group">
          <label for="inputEmail4">Emoji Link<span style="color:red">*</span></label>
          <input type="text" class="form-control" id="Website" name="Website" maxlength="100" placeholder="https://emoji.gg/emoji/3044-pepe-clap" required>
      </div>
      <button type="submit" class="btn btn-primary mt-3"><i class="fa fa-save"></i> Add Emoji</button>
    </form>

<div class="row layout-top-spacing" id="cancel-row">
                

<br><br><br><br><br><br><br><br><br><br><br><br><br>

<script>
    var urlParams = new URLSearchParams(window.location.search);
    if(urlParams.has('success') && urlParams.get('success')){
    Swal.fire({
     icon: 'success',
     title: 'Succesfull...',
     closeOnConfirm: false,
     text: urlParams.get('message'),
     footer: 'Copyright 2021 &copy SnowBots.cf - All right reserved.'
    }).then((result) => {
  if (result.isConfirmed) {
    window.location.href = '/emojis';
  }
})
    }
    if(urlParams.has('error') && urlParams.get('error')){
    Swal.fire({
     icon: 'error',
     title: 'Oops...',
     text: urlParams.get('message'),
     footer: 'Copyright 2021 &copy SnowBots.cf - All right reserved.'
    }).then((result) => {
  if (result.isConfirmed) {
    window.location.href = '/emojis';
  }    
})
    }
   </script>
        <%- include('../parts/foot') %>
    </div>